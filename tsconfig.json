{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./dist/esm",
    "strict": false,
    "declaration": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/esm/types",
    "paths": {
      "rollup/parseAst": ["./node_modules/rollup/dist/parseAst"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
